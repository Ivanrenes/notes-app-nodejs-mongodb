
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
            <div class="form-group">
                <input type="text" name="title" id="" class="form-control" placeholder="Title" value="{{title}}" autofocus>
            </div>
            <div class="form-group">
                <textarea name="description" id="" class="form-control" placeholder="Description" >{{description}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark btn-block">
                    Save
                </button>
            </div>
            </form>
        </div>
</div>
</div>